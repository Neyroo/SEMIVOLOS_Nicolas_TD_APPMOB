<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Splashscreen"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/Tv_splash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Size_Et_splash"
        android:text="@string/chargement"
        android:textSize="@dimen/textsize_splash"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginTop_splash"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/Height_splash"
        android:layout_below="@id/Tv_splash"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/marginTop2"
        android:contentDescription="@string/desc_splash_screen"
        android:src="@drawable/android" />

</RelativeLayout>